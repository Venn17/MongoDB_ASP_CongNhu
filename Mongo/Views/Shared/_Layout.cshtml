
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Mongo DB - Coded by Venn17</title>

    <link rel="stylesheet" href="~/css/adminlte.css">
    <link rel="stylesheet" href="~/css/site.min.css">
    <link rel="stylesheet" href="~/css/all.css">
    <link rel="stylesheet" href="~/css/fontawesome.css">
    <link rel="stylesheet" href="~/css/brands.css">
    <link rel="stylesheet" href="~/css/regular.css">
    <link rel="stylesheet" href="~/css/solid.css">
    <link rel="stylesheet" href="~/css/svg-with-js.css">
    <link rel="stylesheet" href="~/css/v4-shims.css">

</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <div class="preloader flex-column justify-content-center align-items-center">
            <img class="animation__shake" src="~/images/AdminLTELogo.png" alt="AdminLTELogo" height="60" width="60">
        </div>

        <nav class="main-header navbar navbar-expand navbar-white navbar-light">

            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/home" class="nav-link">Home</a>
                </li>
                @if (ViewBag.Login != null)
                {
                    <li class="nav-item d-none d-sm-inline-block">
                        <a asp-controller="login" asp-action="logout" class="nav-link">Logout</a>
                    </li>
                    <li class="nav-item d-none d-sm-inline-block">
                        <a asp-controller="login" asp-action="changeProfile" class="nav-link">Change Profile</a>
                    </li>
                    <li class="nav-item d-none d-sm-inline-block">
                        <a asp-controller="login" asp-action="changePass" class="nav-link">Change Password</a>
                    </li>
                }
            </ul>
        </nav>


        <aside class="main-sidebar sidebar-dark-primary elevation-4">

            <a href="index3.html" class="brand-link text-center">
                <h4 class="m-0" style="font-size:30px;text-transform:uppercase;font-weight:bold;font-family:Papyrus">Avaren</h4>
            </a>

            <div class="sidebar">

                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/images/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                    </div>
                    @if (ViewBag.Login != null)
                    {
                        <div class="info">
                            <a asp-controller="login" asp-action="profile" asp-route-id="@ViewBag.Login._id" class="d-block">@ViewBag.Login.name</a>
                        </div>
                    }
                    else
                    {
                        <div class="info">
                            <a asp-controller="login" asp-action="index" class="d-block">Please Login</a>
                        </div>
                    }
                </div>

                <div class="form-inline">
                    <div class="input-group" data-widget="sidebar-search">
                        <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                        <div class="input-group-append">
                            <button class="btn btn-sidebar">
                                <i class="fas fa-search fa-fw"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-header">Welcome to my product</li>
                        <li class="nav-item">
                            <a href="/department" class="nav-link active">
                                <i class="nav-icon fas fa-list"></i>
                                <p>
                                    Department
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-controller="department" asp-action="Create" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Create a new</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="department" asp-action="Index" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Management</p>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a href="/department" class="nav-link active">
                                <i class="nav-icon fas fa-list"></i>
                                <p>
                                    Area
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-controller="area" asp-action="Create" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Create a new</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="area" asp-action="Index" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Management</p>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a href="/employee" class="nav-link active">
                                <i class="nav-icon fas fa-list"></i>
                                <p>
                                    Employee
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-controller="employee" asp-action="Create" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Create a new</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="employee" asp-action="Index" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Management</p>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a href="/position" class="nav-link active">
                                <i class="nav-icon fas fa-list"></i>
                                <p>
                                    Position
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-controller="position" asp-action="Create" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Create a new</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="position" asp-action="Index" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Management</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </nav>

            </div>

        </aside>

        <div class="content-wrapper bg-white">
            <section class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </section>

        </div>

        <footer class="main-footer">
            <strong>Copyright &copy; 2014-2021 <a href="https://adminlte.io">AdminLTE.io</a>.</strong>
            All rights reserved.
            <div class="float-right d-none d-sm-inline-block">
                <b>Version</b> 3.2.0
            </div>
        </footer>

        <aside class="control-sidebar control-sidebar-dark"></aside>

    </div>


    <script src="~/js/jquery.min.js"></script>

    <script src="~/js/adminlte.js"></script>

    <script src="~/js/dashboard.js"></script>
    <script src="~/js/all.min.js"></script>
    <script src="~/js/fontawesome.min.js"></script>
    <script src="~/js/toastr.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>
