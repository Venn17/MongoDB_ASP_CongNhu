@model IEnumerable<Mongo.Models.ViewModels.DepartmentViewModel>

@{
    ViewData["Title"] = "Search";
}
<div class="container">
    <div class="row mt-5">
        <div class="col-12 text-center">
            <h2 style="font-family:Consolas">Management Departments</h2>
        </div>
    </div>
</div>

@if (ViewBag.Message != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Message
    </div>
}

<div class="container">
    <div class="row">
        <div class="col-12 d-inline-flex">
            <form class="mr-3 w-75" asp-action="Search">
                <div class="form-group form-inline">
                    <input class="form-control mr-2 w-75" name="key" style="border-radius:20px;" id="search" value="@ViewBag.Key" />
                    <button class="btn btn-default" style="border-radius:20px" type="submit">Search</button>
                </div>
            </form>
            <button class="btn btn-success w-25" style="margin-bottom:1rem;border-radius:20px">
                <a style="color:#fff" asp-controller="department" asp-action="Create">Create A New</a>
            </button>
        </div>
    </div>
</div>

<table class="table table-secondary table-hover table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Employees In</th>
            <th>Status</th>
            <th>Leaders</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.count)
                </td>
                <td>
                    @if (item.status)
                    {
                        <p class="text-green text-bold">Active</p>
                    }
                    else
                    {
                        <p class="text-red text-bold">No Active</p>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.leader)
                </td>
                <td>
                    <a asp-controller="department" asp-action="edit" asp-route-id="@item._id" class="btn btn-warning">Edit</a>
                    <a class="btn btn-danger" asp-controller="department" asp-action="delete" asp-route-id="@item._id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<nav aria-label="Page navigation example">
    <ul class="pagination">
        @if (ViewBag.totalPage > 1)
        {
            @if (ViewBag.CurrentPage > 1)
            {
                <li class="page-item mr-2"><a class="page-link" style="border-radius:20px" href="/department/search?key=@ViewBag.Key&page=@(ViewBag.CurrentPage - 1)">Previous</a></li>
            }
            @for (int i = 0; i < ViewBag.totalPage; i++)
            {
                if (i + 1 == ViewBag.CurrentPage)
                {
                    <li class="page-item active mr-2"><a class="page-link" style="border-radius:20px" href="/department/search?key=@ViewBag.Key&page=@(i + 1)">@(i + 1)</a></li>
                }
                else
                {
                    <li class="page-item mr-2"><a class="page-link" style="border-radius:20px" href="/department/search?key=@ViewBag.Key&page=@(i + 1)">@(i + 1)</a></li>
                }
            }
            @if (ViewBag.CurrentPage < ViewBag.totalPage)
            {
                <li class="page-item"><a class="page-link" style="border-radius:20px" href="/department/search?key=@ViewBag.Key&page=@(ViewBag.CurrentPage + 1)">Next</a></li>
            }
        }
    </ul>
</nav>
