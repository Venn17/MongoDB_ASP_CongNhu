@model IEnumerable<Mongo.Models.ViewModels.EmployeeViewModel>

@{
    ViewData["Title"] = "Search";
}
<div class="container">
    <div class="row mt-5">
        <div class="col-12 text-center">
            <h2 style="font-family:Consolas">Management Employees</h2>
        </div>
    </div>
</div>
@if (ViewBag.Message != null)
{
    <div class="alert alert-danger" role="alert">
        <strong>Error!</strong>@ViewBag.Message
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<div class="container">
    <div class="row">
        <div class="col-12 d-inline-flex">
            <form class="mr-3 col-10 form-inline" asp-action="Search">
                <div class="form-group">
                    <input class="form-control mr-2 " name="key" value="@ViewBag.Key" style="border-radius:20px;width:250px" id="search" />
                </div>
                <div class="form-group">
                    <select name="depID" class="form-control mr-1" style="border-radius:20px" onfocus="this.size = 3" onblur='this.size = 3' onchange="this.size = 3; this.blur();">
                        <option value="">Department</option>
                        @foreach (var item in ViewBag.Department)
                        {
                            if (item._id == ViewBag.DepartmentID)
                            {
                                <option value="@item._id" selected>@item.name</option>
                            }
                            else
                            {
                                <option value="@item._id">@item.name</option>
                            }
                        }
                    </select>
                </div>
                <div class="form-group">
                    <select name="positionID" class="form-control mr-1" style="border-radius:20px" onfocus="this.size = 3" onblur='this.size = 3' onchange="this.size = 3; this.blur();">
                        <option value="">Position</option>
                        @foreach (var item in ViewBag.Position)
                        {
                            if (item._id == ViewBag.PositionID)
                            {
                                <option value="@item._id" selected>@item.name</option>
                            }
                            else
                            {
                                <option value="@item._id">@item.name</option>
                            }
                        }
                    </select>
                </div>
                <div class="form-group">
                    <select name="areaID" class="form-control mr-1" style="border-radius:20px" onfocus="this.size = 3" onblur='this.size = 3' onchange="this.size = 3; this.blur();">
                        <option value="">Area</option>
                        @foreach (var item in ViewBag.Area)
                        {
                            if (item._id == ViewBag.AreaID)
                            {
                                <option value="@item._id" selected>@item.name</option>
                            }
                            else
                            {
                                <option value="@item._id">@item.name</option>
                            }
                        }
                    </select>
                </div>
                <button class="btn btn-primary" style="border-radius:20px" type="submit">Search</button>
            </form>
            <button class="btn btn-success col-2" style="margin-bottom:1rem;margin-top:1rem;border-radius:20px">
                <a style="color:#fff" asp-controller="employee" asp-action="Create">Create A New</a>
            </button>
        </div>
    </div>
</div>
<table class="table table-secondary table-hover">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Age
            </th>
            <th>
                Address
            </th>
            <th>
                Department
            </th>
            <th>
                Area
            </th>
            <th>
                Position
            </th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.firstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.lastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.departmentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.areaName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.positionName)
                </td>
                <td>
                    <a asp-controller="employee" asp-action="details" asp-route-id="@item._id" class="btn btn-success">Detail</a>
                    <a asp-controller="employee" asp-action="edit" asp-route-id="@item._id" class="btn btn-warning">Edit</a>
                    <a class="btn btn-danger" asp-controller="employee" asp-action="delete" asp-route-id="@item._id" onclick="confirm('Do you want to delete this employee ?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<nav aria-label="Page navigation example">
    <ul class="pagination">
        @if (ViewBag.totalPage > 1)
        {
            @if (ViewBag.CurrentPage > 1)
            {
                <li class="page-item mr-2"><a class="page-link" style="border-radius:20px" href="/employee?page=@(ViewBag.CurrentPage - 1)&key=@ViewBag.Key&depID=@ViewBag.DepartmentID&positionID=@ViewBag.PositionID&areaID=@ViewBag.AreaID">Previous</a></li>
            }
            @for (int i = 0; i < ViewBag.totalPage; i++)
            {
                if (i + 1 == ViewBag.CurrentPage)
                {
                    <li class="page-item active mr-2"><a class="page-link" style="border-radius:20px" href="/employee?page=@(i + 1)&key=@ViewBag.Key&depID=@ViewBag.DepartmentID&positionID=@ViewBag.PositionID&areaID=@ViewBag.AreaID">@(i + 1)</a></li>
                }
                else
                {
                    <li class="page-item mr-2"><a class="page-link" style="border-radius:20px" href="/employee?page=@(i + 1)&key=@ViewBag.Key&depID=@ViewBag.DepartmentID&positionID=@ViewBag.PositionID&areaID=@ViewBag.AreaID">@(i + 1)</a></li>
                }
            }
            @if (ViewBag.CurrentPage < ViewBag.totalPage)
            {
                <li class="page-item"><a class="page-link" style="border-radius:20px" href="/employee?page=@(ViewBag.CurrentPage + 1)&key=@ViewBag.Key&depID=@ViewBag.DepartmentID&positionID=@ViewBag.PositionID&areaID=@ViewBag.AreaID">Next</a></li>
            }
        }
    </ul>
</nav>
