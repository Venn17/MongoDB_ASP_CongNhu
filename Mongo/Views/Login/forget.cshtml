<body class="bg-light">

    <div class="container">
        <div class="row mt-5">
            <div class="col-12 text-center">
                <h2 style="font-family:Consolas">Forget Password</h2>
            </div>
        </div>
    </div>
    <div class="container bg-white" style="border-radius:20px;padding:20px">
        <div class="row justify-content-center">
            <div class="col-10">
                <form asp-action="forgetPass" method="post">
                    <div class="form-group">
                        <label>Enter Your Address Email</label>
                        <input type="text" class="form-control" name="email" placeholder="Enter Email ..." />
                        <small>We will send a code to this email !! Don't SHARE anyone to security your information . </small>
                    </div>
                    <button type="submit" class="btn btn-success">Send</button>
                    <a class="btn btn-warning" asp-controller="login" asp-action="index">Cancel</a>
                </form>
            </div>
        </div>
    </div>
    <!-- /.login-box -->
    <script src="~/js/jquery.min.js"></script>

    <script src="~/js/adminlte.js"></script>

    <script src="~/js/dashboard.js"></script>
    <script src="~/js/all.min.js"></script>
    <script src="~/js/fontawesome.min.js"></script>
    <script src="~/js/toastr.min.js"></script>
